<% flash.each do |key, value| %>
  <%= value %>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>body</h4>
<%= f.text_area :body %>

<%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", @book %>
<%= link_to "Back", books_path %>